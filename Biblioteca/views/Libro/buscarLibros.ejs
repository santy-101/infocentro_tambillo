<div class ="container">
  <h2>Buscar un Libro</h2>

  <form action="/Libro/BuscarLibros" method="post">

    <div class="form-group">
      <label>Nombre</label>
      <input type="text" class="form-control" placeholder="Ingrese el nombre del libro" name="nombre">
    </div>

    <div class="form-group">
      <label>Autor(es)</label>
      <input type="text" class="form-control" placeholder="Ingrese los autores del libro" name="autor">
    </div>

    <button type="submit" class="btn btn-success">Buscar libro</button>

  </form>
</div>



