<h1>Lista de Libros</h1>

<div class="row">
  <div class="col-sm-9">
    <p>Aqu√≠ se listan todas los libros de la biblioteca</p>
  </div>
  <div class="col-sm-3">
    <a href="/CrearLibro" class="btn btn-block btn-success">
      Registrar Libro
    </a>
  </div>
</div>
<br>


<% for(var i=0; i<libros.length; i++) {%>
<div class="row">
  <div class="col-sm-2"></div>
<div class="col-sm-8 formatoListar">
<div class="row ma-margen-top-bottom">
  <div class="col-sm-1"></div>
  <div class="col-sm-4">
    <div class="text-center  ma-padding-top-bottom">
      <h1> <%= libros[i].nombre %></h1>
    </div>
  </div>
  <div class="col-sm-1"></div>
  <div class="col-sm-4 text-center">
    <div class="text-center " style="margin-top: 40px;">
      <p>
        <%= libros[i].nombre %>
      </p>
      <p>
        Autor(es): <%= libros[i].autor %>
      </p>
      <p>
        Cantidad: <%= libros[i].cantidad %>
      </p>
    </div>
  </div>
  <div class="col-sm-2">
    <br>
    <a href="/Libro/borrarLibro?id=<%= libros[i].id %>" class="btn btn-danger btn-block">X</a>
    <a href="/EditarLibro?id=<%= libros[i].id %>" class="btn btn-info btn-block">Editar</a>
  </div>
</div>
  </div>
  <div class="col-sm-2"></div>
</div>
<br>
<% }%>






