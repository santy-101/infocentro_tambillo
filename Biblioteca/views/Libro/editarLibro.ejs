<h1>Editar Libro - <%= libroAEditar.nombre %></h1>

<div class="row">
  <div class="col-sm-1"></div>
  <div class="col-sm-4 formatoListar">
    <form action="/Libro/EditarLibro" method="post">
      <div class="form-group">
        <label>Nombre</label>
        <input type="text" class="form-control" placeholder="Ingrese el nuevo nombre del libro" name="nombre"
               value="<%= libroAEditar.nombre %>" required>
      </div>

      <div class="form-group">
        <label>Autor(es)</label>
        <input type="text" class="form-control" placeholder="Ingrese el nuevo autor del libro" name="autor"
               value="<%= libroAEditar.autor %>" required>
      </div>

      <div class="form-group">
        <label>Cantidad de libros</label>
        <input type="number" min="1" class="form-control" placeholder="Ingrese la nueva cantidad de libros" name="cantidad" value="<%= libroAEditar.cantidad %>" required>
      </div>
      <input type="hidden" name="idLibro" value="<%= libroAEditar.id %>">
      <button type="submit" class="btn btn-primary">Editar Bodega</button>
    </form>
    <br>
  </div>
  <div class="col-sm-2"></div>
  <div class="col-sm-4 text-center formatoListar">
    <h2><%= libroAEditar.nombre %></h2>
    <h3>
      Autor(es): <%= libroAEditar.autor %>
    </h3>
    <p>Cantidad: <%= libroAEditar.cantidad %> </p>

  </div>
  <div class="col-sm-1"></div>

</div>

